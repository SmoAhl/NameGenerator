@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/media/wizard.webp');
            /* Update with the correct path to your GIF */
            background-size: cover;
            /* Stretches to cover the full screen */
            background-position: center center;
            /* Centers the GIF */
            background-repeat: no-repeat;
            /* Prevents repeating */
            height: 100vh;
            /* Makes the background cover the full viewport height */
        }

        h1,
        h2,
        p {
            color: white;
            text-align: center;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
            /* Shadow effect: X and Y offsets, blur radius, and shadow color */
        }

        h1 {
            padding-top: 20px;
            font-size: 3em;
        }

        h2 {
            font-size: 2em;
        }

        p {
            font-size: 1.5em;
        }

        /* Additional styles for form and name display */
        form,
        div {
            text-align: center;
            margin-top: 20px;
        }

        input[type="text"] {
            text-align: center;
            font-size: 1.5em;
            padding: 10px;
            width: 60%;
        }

        button {
            padding: 10px 20px;
            font-size: 1.2em;
            cursor: pointer;
        }

        .content {
            position: relative;
            z-index: 1;
        }
    </style>
</head>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>On this site you can generate a wizard name for your game character.</h2>
    <p>Go to the <a asp-page="/NameGenerator">Name Generator</a> page.</p>
</div>
